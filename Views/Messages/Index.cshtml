@model MVCFRIB.Models.Message

@{
    ViewData["Title"] = "Send Message";
}

<h1 class="center-text">Send Message</h1>

<hr />

<div class="text-center">
    <h1>Enter a Message to Leave Behind</h1>
    <form class="form" asp-action="SendMessage">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group form-message">
            <label asp-for="MessageContent" class="form-label">Message:</label>
            <textarea asp-for="MessageContent" class="form-control text-box" rows="4" cols="30"></textarea>
            <span asp-validation-for="MessageContent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send" class="form-button background-state" />
        </div>
    </form>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
